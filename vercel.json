{
  "version": 2,
  "name": "islamic-utility-hub",
  "alias": ["islamic-utility-hub.vercel.app"],
  "outputDirectory": "public",
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/zakat",
      "destination": "/zakat.html"
    },
    {
      "source": "/salah-times",
      "destination": "/salah-times.html"
    },
    {
      "source": "/mosques",
      "destination": "/mosques.html"
    },
    {
      "source": "/today-prayers",
      "destination": "/today-prayers.html"
    },
    {
      "source": "/umrah-guide",
      "destination": "/umrah-guide.html"
    },
    {
      "source": "/ai-qa",
      "destination": "/ai-qa.html"
    },
    {
      "source": "/events",
      "destination": "/events.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/(.*).(css|js|png|jpg|jpeg|svg)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
